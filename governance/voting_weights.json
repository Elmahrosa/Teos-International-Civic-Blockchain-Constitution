{
  "voting_system": {
    "weights": {
      "Citizen": {
        "weight": 1,
        "description": "Petition approval and community proposals",
        "permissions": [
          "submit_proposals",
          "vote_basic"
        ]
      },
      "Validator": {
        "weight": 5,
        "description": "Proposal validation, treasury enforcement, compliance audits",
        "permissions": [
          "validate_proposals",
          "enforce_treasury",
          "audit_logs"
        ],
        "metrics": {
          "uptimeWeightMultiplier": true,
          "civicActivityBonus": true,
          "maxWeight": 15
        }
      },
      "Founder": {
        "weight": 10,
        "description": "Module activation, treasury custody, override in governance stalemates",
        "permissions": [
          "activate_modules",
          "custody_vault",
          "override_stalemates"
        ]
      }
    },
    "rules": {
      "quorum": {
        "default": 0.66,
        "amendment": 0.80
      },
      "supermajority": 0.67,
      "logging": "audits/transparency_log.md",
      "treasury_verification": "vault_registry.json",
      "enforcement": "Voting weight is active only after badge verification and petition proof approval by TEOS validators. All votes are logged for audit purposes."
    },
    "audit_trail": {
      "voteLoggingRequired": true,
      "signatureVerificationMandatory": true,
      "slashingEventsPublic": true
    }
  }
}
